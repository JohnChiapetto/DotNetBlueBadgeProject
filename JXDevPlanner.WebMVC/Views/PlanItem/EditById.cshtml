@model JXDevPlanner.Models.PlanItemEdit

@{
    ViewBag.Title = "Edit";
}

<h2>EditById</h2>

<noscript>
    <div class="jumbotron">
        <h1>HEY! YOU NEED JAVASCRIPT ENABLED DOOFUS!</h1>
    </div>
</noscript>


@using (Html.BeginForm("Edit","PlanItem","POST"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>PlanItemEdit</h4>
    <hr />
    @Html.ValidationSummary(true,"",new { @class = "text-danger" })

    <div class="form-group">
        @Html.HiddenFor(model => model.PlanID)
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.ProjectID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name,"",new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Detail,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Detail,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Detail,"",new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @*@Html.ActionLink("Confirm","Edit",new { model = Model })*@
            <a id="bSave" href="javascript:submit();" class="btn btn-default">Save</a>
            @*<input type="submit" value="Save" class="btn btn-default" />*@
        </div>
    </div>
</div>
}

<script>
    function submit() {
        var id = "@Model.PlanID";
        var name = Name.value;
        var desc = Detail.value;
        window.location.href = '/PlanItem/SaveEdits?id=' + id + '&name=' + name + '&desc=' + desc;
    }
</script>

<div>
    @Html.ActionLink("Back to List", "Details","Project",new { id = Model.ProjectID },new { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
